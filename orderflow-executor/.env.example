# PostgreSQL connection (from Railway)
DATABASE_URL=postgresql://user:pass@host:5432/railway

# Polymarket API credentials (optional - for auto-execution)
POLY_API_KEY=your_api_key_here
POLY_API_SECRET=your_api_secret_here
POLY_API_PASSPHRASE=your_passphrase_here

# Trading wallet private key (optional - for signing orders)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Risk management
MAX_POSITION_USD=1000
MIN_SIGNAL_CONFIDENCE=0.7
MAX_DAILY_LOSS=500
MAX_OPEN_POSITIONS=5

# Signal thresholds
MIN_WHALE_SCORE=7.0
MAX_FADE_SCORE=3.0

# Feature flags
ENABLE_PAPER_TRADING=true
ENABLE_WHALE_FOLLOWING=true
ENABLE_DEGEN_FADING=false

# Position sizing
KELLY_FRACTION=0.25

# Logging
RUST_LOG=info,orderflow_executor=debug
